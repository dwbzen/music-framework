<?xml version="1.0" encoding="UTF-8" ?>
<Configuration status="error" name="XMLConfig" packages="org.apache.logging.log4j.test">
  <Properties>
    <Property name="filename">test.log</Property>
  </Properties>
  <ThresholdFilter level="trace"/>
  
  <Appenders>
    <Console name="STDOUT">
    	 <PatternLayout pattern="%d{Date} [%t] - %msg%n"/>
    </Console>
    <File name="File" fileName="${filename}">
      <PatternLayout>
        <pattern>%d %p %C{1.} [%t] %m%n</pattern>
      </PatternLayout>
    </File>
  </Appenders>

  <Loggers>
      <Logger name="org.dwbzen.common" level="info" additivity="false">
		<AppenderRef ref="STDOUT"/>
	</Logger>
	
    <Logger name="org.dwbzen" level="info" additivity="false">
		<AppenderRef ref="STDOUT"/>
	</Logger>
	
    <root>
        <level value="INFO" /> 
		<AppenderRef ref="STDOUT"/>
    </root>
  </Loggers>

</Configuration>
