<?xml version="1.0" encoding="UTF-8" ?>
<Configuration>
<Appenders>
	<Console name="STDOUT"  target="SYSTEM_OUT">
		<PatternLayout pattern="TEST %d{DATE} | %p | %t | %m%n"/>
	</Console>

	<File name="FILE" filename="c:/temp/app.log" append="false" createOnDemand="true">
		<PatternLayout pattern="%d{DATE} | %p | %t | message: %m%n"/>
	</File>

    <File name="UIAPP" filename="c:/temp/app.log" append="true">
		<PatternLayout pattern="%d{DATE} | %p | %t | %m%n"/>
	</File>
</Appenders>
<Loggers>

    <Logger name="mathlib" additivity="false">
		<level value="INFO"/>
		<appender-ref ref="STDOUT"/>
	</Logger>
	
    <Logger name="music" additivity="false">
		<level value="debug"/>
		<appender-ref ref="STDOUT"/>
	</Logger>

	<Logger name="util.cp" additivity="false">
		<level value="INFO"/>
		<appender-ref ref="STDOUT"/>
	</Logger>
	
	<Logger name="util.music" additivity="false">
		<level value="DEBUG"/>
		<appender-ref ref="STDOUT"/>
	</Logger>
	
	<Logger name="org" additivity="false">
		<level value="INFO"/>
		<appender-ref ref="STDOUT"/>
	</Logger>
	
    <Root level="debug">
      <AppenderRef ref="STDOUT"/>
    </Root>
</Loggers>
</Configuration>

